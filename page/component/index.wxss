.date-container {
	white-space: nowrap;
	box-shadow: 0 0 6rpx 0 #888;
	margin-bottom: 6rpx;
}

.date-item {
	position: relative;
	display: inline-block;
	width: 200rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
}

.date-item.select {
	color: #009900;
}

.data-item-mark {
	position: absolute;
	width: 100%;
	bottom: 0;
	height: 5rpx;
	background-color: #009900;
}

.room-list {
	padding: 40rpx;
}

.room-item {
	margin-bottom: 20rpx;
}

.room-icon {
	font-size: 60rpx;
	display: inline-block;
	vertical-align: middle;
}

.room-msg {
	display: inline-block;
	vertical-align: middle;
	margin-left: 20rpx;
}

.room-name {
	font-weight: bold;
}

.room-desc {
	font-size: 26rpx;
	color: #666666;
}

.room-record {
	position: relative;
	width: 100%;
}

.record-item {
	box-sizing: border-box;
	display: inline-block;
	width: 7.692%;
	text-align: center;
	padding: 0 4rpx;
}

.record-am {
	height: 100rpx;
	background-color: #CCCCCC;
}

.record-am.active {
	background-color: #00CC00;
}

.record-pm {
	height: 100rpx;
	background-color: #999999;
}

.record-pm.active {
	background-color: #00CC00;
}
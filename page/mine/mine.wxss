.record-item {
    background-color: #FFFFFF;
    margin-top: 40rpx;
    padding: 20rpx;
    border-top: 1rpx solid #D9D9D9;
    border-bottom: 1rpx solid #D9D9D9;
}

.record-header {
    position: relative;
    border-bottom: 1px solid #eeeeee;
    padding: 20rpx 0;
}

.header-icon {
    font-size: 60rpx;
    display: inline-block;
    vertical-align: middle;
}

.header-theme {
    display: inline-block;
    vertical-align: middle;
    margin-left: 30rpx;
}

.record-content {
    padding: 20rpx 0;
}

.btn-cancel {
    position: absolute;
    right: 10rpx;
    top: 0;
}
/* roomDetail.wxss */
.header {
	margin-bottom: 20rpx;
	background-color: #FFFFFF;
	padding: 10rpx 30rpx;
	border-bottom:1rpx solid #D9D9D9;
}

.header-icon {
	font-size: 60rpx;
	display: inline-block;
	vertical-align: middle;
}

.header-msg {
	display: inline-block;
	vertical-align: middle;
	margin-left: 40rpx;
}

.header-name {
	font-weight: bold;
}

.header-desc {
	font-size: 26rpx;
	color: #666666;
}

.date-container {
	margin-top: 20rpx;
    padding:0 4rpx 20rpx;
}

.date-title {
	min-height: 88rpx;
	line-height: 88rpx;
}

.record-item {
	box-sizing: border-box;
	display: inline-block;
	width: 7.692%;
	text-align: center;
	padding: 0 4rpx;
}

.record-am {
	height: 150rpx;
	background-color: #CCCCCC;
}

.record-am.active {
	background-color: #00CC00;
}

.record-am.select {
    background-color: #3d37cc;
}

.record-pm {
	height: 150rpx;
	background-color: #999999;
}

.record-pm.active {
	background-color: #00CC00;
}

.record-pm.select {
    background-color: #3d37cc;
}

.btn-ensure {
    padding: 0 20rpx;
}